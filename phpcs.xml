<?xml version="1.0"?>
<ruleset name="InvoiceGenerator Coding Standard">
    <description>Slevomat Coding Standard for InvoiceGenerator Library</description>

    <!-- Show colors in console -->
    <arg value="-colors"/>

    <!-- Show progress -->
    <arg value="p"/>

    <!-- Set tab width to 4 spaces -->
    <arg name="tab-width" value="4"/>

    <!-- Paths to check -->
    <file>src</file>

    <config name="basePath" value="./src"/>

    <!-- Include Slevomat Coding Standard -->
    <rule ref="SlevomatCodingStandard"/>

    <exclude name="SlevomatCodingStandard.Classes.EmptyLinesAroundClassBraces.NoEmptyLineAfterOpeningBrace"/>

    <!-- Complexity -->
    <rule ref="SlevomatCodingStandard.Complexity.Cognitive">
        <properties>
            <property name="maxComplexity" value="12"/>
        </properties>
    </rule>

    <!-- Use tabs for indentation -->
    <rule ref="Generic.WhiteSpace.ScopeIndent">
        <properties>
            <property name="tabIndent" value="true"/>
        </properties>
    </rule>

    <!-- Allow tabs -->
    <rule ref="Generic.WhiteSpace.DisallowTabIndent">
        <severity>0</severity>
    </rule>

    <!-- Strict type hint format -->
    <rule ref="SlevomatCodingStandard.TypeHints.DNFTypeHintFormat"/>

    <!-- Type name must match file name -->
    <rule ref="SlevomatCodingStandard.Files.TypeNameMatchesFileName">
        <properties>
            <property name="rootNamespaces" type="array">
                <element key="src/Kenod/InvoiceGenerator" value="Kenod\InvoiceGenerator"/>
            </property>
        </properties>
    </rule>
</ruleset>